@{
    ViewData["Title"] = "Manage Accounts";
}
<script src="~/js/jquery-3.6.0.js"></script>
<script src="~/js/password_gen.js" defer></script>

<div id="page" class="container-fluid">
    <div class="row">
        <partial name="_ManagerSidebar.cshtml"></partial>
        <div id="content" class="bg-light col-lg">
            <div id="manage-accounts">
                <form>
                    <div class="form-group row border-top my-3 ">
                        <h4 class="justify-content-center d-flex">Input the Resident's Username</h4>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group row border-top my-3">
                        <h4 class="justify-content-center d-flex">Set Resident Details</h4>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label for="f_name">First Name:</label>
                            <input type="text" class="form-control" id="f_name" placeholder="First Name">
                        </div>
                        <div class="col">
                            <label for="m_name">Middle Name:</label>
                            <input type="text" class="form-control" id="m_name" placeholder="Middle Name">
                        </div>
                        <div class="col">
                            <label for="l_name">Last Name:</label>
                            <input type="text" class="form-control" id="l_name" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label for="f_name" class="col-sm-4 col-form-label">Lease Number:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="lease_number" placeholder="Lease#">
                            </div>
                        </div>
                        <div class="col">
                            <label for="status" class="col-sm-4 col-form-label">Resident Status:</label>
                            <div class="col-sm-8">
                                <select name="resident_status" class="form-select" id="status">
                                  <option value="volvo">Good Status</option>
                                  <option value="saab">On Hold</option>
                                  <option value="mercedes">Processing</option>
                                  <option value="audi">Payment Required</option>
                                </select>   
                            </div>
                        </div>
                    </div>
                    <div class="form-group row border-top my-3 ">
                        <h4 class="justify-content-center d-flex">Select Pre-Registered Clubs</h4>
                    </div>
                    <div class="form-group row club-input">
                    </div>

                    <div class="form-group row">
                        <a class="btn btn-primary mt-2" id="man_add_club">Add a Club w/ Role</a>
                    </div>
                    <div class="form-group row border-top my-3 ">
                        <h4 class="justify-content-center d-flex">Input any Debt</h4>
                    </div>
                    <div class="form-group row border-top my-3 ">
                        <h4 class="justify-content-center d-flex">Generate Key or Set a Password</h4>
                        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <input id="gen_key" class="btn btn-primary" type="button" value="Generate Key">
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" id="key" placeholder="Key">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="form-check form-check-inline text-center">
                              <br>
                              <input type="radio" id="radio_input" name="fav_language" value="Inputed">
                              <label for="radio_input">Inputed</label>
                              <input type="radio" id="radio_generated" name="fav_language" value="Generated">
                              <label for="radio_generated">Generated Key</label>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>         
</div>